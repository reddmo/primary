<div class="webmentions" id="webmentions">
  {% if mentions.comments %}
  <h4 style="color: var(--color-date)">Comments ({{ mentions.comments | length }})</h4>
  <div class="comments">
    {% for item in mentions.comments %}
      <div class="comment">
        <a href="{{ item.author.url }}" class="comment-author"><img src="{{ item.author.photo}}" class="mention-image" alt="photo of the author of one of the webmentions for this page"></a>
        <p class="comment-content">{{ item.content | safe }}</p>
        <p class="comment-date">{{ item.published | plainDate }}</p>
      </div>
    {% endfor %}
  </div>
  {% endif %}
<br>
  {% if mentions.likes %}
  <h4 style="color: var(--color-date)">Likes ({{ mentions.likes | length }})</h4>
  <div class="likes">
    {% for item in mentions.likes %}
      <a href="{{ item.url }}"><img src="{{ item.photo }}" class="mention-image" alt="photo of the author of one of the webmentions for this page"></a>
    {% endfor %}
  </div>
  {% endif %}
<br>
  {% if mentions.reposts %}
  <h4 style="color: var(--color-date)">Reposts ({{ mentions.reposts | length }})</h4>
  <div class="reposts">
    {% for item in mentions.reposts %}
      <a href="{{ item.url }}" style="background-image: none !important"><img src="{{ item.photo }}" class="mention-image" alt="photo of the author of one of the webmentions for this page"></a>
    {% endfor %}
  </div>
  {% endif %}
</div>