<nav id="mainnav" class="site-nav" aria-label="{{ meta.navigation.ariaTop }}">
  <ul class="cluster" style="--gap: 0" role="list">
    {% for item in navigation.top %}
    <li>
      <a
        class="nav; button post-tag"
        href="{{ item.url }}"
        {{
        helpers.getLinkActiveState(item.url,
        page.url)
        |
        safe
        }}
        >{{ item.text }}</a
      >
    </li>
    {% endfor %}<br>

  </ul>
</nav>
