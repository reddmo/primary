---
layout: base
masonry: true
---

<div class="wrapper">
  <header class="full | section">
    <div class="section__inner flow region"></div>

  </header>

  <article class="full | region">
    <div class="wrapper flow prose">
      {{ content | safe }}
    </div>
  </article>

  <section class="full | region">
    <div class="wrapper flow prose">
      <h2 style="color: var(--color-head)">{{ blog.title }}</h2>
      <!-- blog intro text is optional. -->

      {% if blog.intro %}
      <p>{{ blog.intro }}</p>
      {% endif %}

      <ul
        class="feature | grid region"
        role="list"
        data-rows="masonry"
        data-layout="50-50"
      >
        <!-- loop posts -->
        {% set itemList = collections.posts %} {% for item in itemList.slice(0, 4) %}
        <!-- activate tags -->
        {% set activateTags = true %}
        <!-- set heading context -->
        {% set headingContext = "h3" %}
        <!-- card -->
        {% include 'components/card.njk' %} {% endfor %}
      </ul>
    </div>
  </section>
</div>

